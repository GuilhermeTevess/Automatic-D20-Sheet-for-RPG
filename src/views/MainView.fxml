<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<VBox alignment="CENTER" spacing="10"
      xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="controllers.MainController"
      style="-fx-padding: 20;">

    <Label text="Ficha de Investigador" style="-fx-font-size: 26px; -fx-font-weight: bold;"/>

    <HBox spacing="10" alignment="CENTER">
        <TextField fx:id="txtName" promptText="Nome"/>
        <TextField fx:id="txtAge" promptText="Idade"/>
    </HBox>

    <Separator/>

    <Label text="Vida" style="-fx-font-size: 18px;"/>
    <HBox spacing="10" alignment="CENTER">
        <Label text="Atual:"/>
        <TextField fx:id="txtCurrentLife" prefWidth="50" text="14"/>
        <Label text="Máx:"/>
        <TextField fx:id="txtMaxLife" prefWidth="50" text="14"/>
    </HBox>

    <ProgressBar fx:id="lifeBar" prefWidth="300" progress="1.0"/>
    <Label fx:id="lifeLabel" text="14 / 14" style="-fx-font-size: 16px;"/>

    <Separator/>

    <Label text="Atributos" style="-fx-font-size: 18px; -fx-underline: true;"/>
    <GridPane hgap="10" vgap="5" alignment="CENTER" fx:id="gridAttributes"/>

    <Separator/>

    <Label text="Perícias" style="-fx-font-size: 18px; -fx-underline: true;"/>
    <GridPane hgap="10" vgap="5" alignment="CENTER" fx:id="gridSkills"/>

    <Separator/>

    <HBox spacing="10" alignment="CENTER">
        <Button text="Salvar Ficha" onAction="#onSaveClick"/>
        <Button text="Carregar Ficha" onAction="#onLoadClick"/>
    </HBox>
</VBox>
